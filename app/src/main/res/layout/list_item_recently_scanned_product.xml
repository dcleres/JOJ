<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recently_scanned_products"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recently_scanned_product_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/tw__composer_black"
            android:textColorHighlight="@color/tw__composer_black"
            android:text="@string/empty_field"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/recentProductImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:contentDescription="@null"
            android:src="?android:attr/homeAsUpIndicator" />
    </LinearLayout>

</RelativeLayout>

